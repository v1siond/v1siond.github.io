.hobby-character
  height 20%
  width 10%
  position absolute
  &.punching-alex
    background url('../../assets/images/alexBag.gif') center center no-repeat
    background-size 100% 100%
    position absolute
    left 64%
    bottom 42%
    z-index 1
  &.hammer-alex
    background url('../../assets/images/alexHammer.gif') center center no-repeat
    background-size 100% 100%
    bottom 45%
    left 30%
    width 15%
    z-index 1
  &.running-alex
    animation runAlex 55s 2s infinite forwards
    background url('../../assets/images/alexRun.gif') center center no-repeat
    background-size 100% 100%
    bottom 7.5%
    left -10%
    width 5.5%
    z-index 10